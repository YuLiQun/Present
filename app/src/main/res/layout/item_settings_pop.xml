<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fefefe"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择性别"
        android:textSize="20dp"
        android:id="@+id/tv_settings_back"
        android:gravity="center_horizontal"
        android:drawableRight="@mipmap/icon_delete_cross"
        />

    <RadioGroup
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="男孩"
            android:id="@+id/rbtn_settings_boy"
            android:drawableTop="@mipmap/ic_gender_boy"
            android:button="@null"
            android:gravity="center"
            android:drawableBottom="@android:drawable/btn_radio"
            />


        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="女孩"
            android:id="@+id/rbtn_settings_girl"
            android:drawableTop="@mipmap/ic_gender_girl"
            android:button="@null"
            android:gravity="center"
            android:drawableBottom="@android:drawable/btn_radio"
            />

    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="下一步"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#f2486a"
        android:id="@+id/tv_settings_next"
        />


</LinearLayout>