<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:phoneNumber="true"
        android:maxLength="11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/et_logon_num"
        android:drawableLeft="@mipmap/icon_cellphone"
        android:hint="输入手机号"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_tab_select_normal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="输入密码"
        android:maxLength="18"
        android:id="@+id/et_logon_password"
        android:password="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_solid"
        android:text="注册"
        android:id="@+id/btn_logon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#ffff"
        android:textSize="20dp"/>

</LinearLayout>