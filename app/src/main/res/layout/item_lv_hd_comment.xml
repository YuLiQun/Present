<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img_hot_dcomment_avatar"/>

        <TextView
            android:textColor="#342b2a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_hot_dcomment_avatar"
            android:id="@+id/tv_hot_dcomment_nickname"
            android:text="hbsalkdjfdksl"
            android:paddingLeft="5dp"/>

        <TextView
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hjfksl;"
            android:id="@+id/tv_hot_dcomment_created"
            android:layout_toRightOf="@id/img_hot_dcomment_avatar"
            android:layout_below="@id/tv_hot_dcomment_nickname"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <TextView
        android:textColor="#342b2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jjjj"
        android:id="@+id/tv_hot_dcomment_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>




</LinearLayout>