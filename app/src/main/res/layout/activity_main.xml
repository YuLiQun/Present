<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mian.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/fl_main">

    </FrameLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--android:button="@null"   ,,如果是null,,则会R文件丢失-->
        <!--android:checked="true"   默认显示-->
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rbtn_home"
            android:button="@null"
            android:text="首页"
            android:gravity="center"
            android:checked="true"
            android:drawableTop="@drawable/home_change"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rbtn_hotsale"
            android:button="@null"
            android:text="榜单"
            android:gravity="center"
            android:drawableTop="@drawable/hotsale_change"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rbtn_sort"
            android:button="@null"
            android:text="分类"
            android:gravity="center"
            android:drawableTop="@drawable/sort_change"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rbtn_mine"
            android:button="@null"
            android:text="个人"
            android:gravity="center"
            android:drawableTop="@drawable/mine_change"
            />

    </RadioGroup>



</LinearLayout>
