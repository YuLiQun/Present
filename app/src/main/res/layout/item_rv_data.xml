<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_hot_repeat_background"
    app:cardBackgroundColor="#fefefe"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:id="@+id/img_hot_repeat_coverimage"
            android:src="@mipmap/image_default" />

        <TextView
            android:layout_below="@+id/img_hot_repeat_coverimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hot_repeat_repeat_top"
            android:text="top1"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textColor="#342b2a"
            android:id="@+id/tv_hot_repeat_description"
            android:layout_below="@id/img_hot_repeat_coverimage"
            android:layout_toRightOf="@id/tv_hot_repeat_repeat_top"
            android:text="jksjkljkjhkljkjjhkkljkjhjkjkljjkljhjldjf"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悦诗风吟·真萃鲜润面膜*15片"
            android:id="@+id/tv_hot_repeat_name"
            android:layout_below="@id/tv_hot_repeat_repeat_top"
            android:layout_marginTop="3dp"
            android:textColor="#837676"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#ff3c58"
            android:layout_below="@+id/tv_hot_repeat_name"
            android:layout_marginTop="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hot_repeat_price"
            android:text="20"
            android:textColor="#ff3c58"
            android:layout_below="@id/tv_hot_repeat_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>