<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fefefe"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_home_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@mipmap/btn_back_black" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="详情攻略"
            android:textColor="#342b2a"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看全集"
            android:textColor="#342b2a"
            android:textSize="15dp" />


    </LinearLayout>


    <WebView
        android:id="@+id/web_home_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">


    </WebView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="#fefefe"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_home_details_likescount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_action_compact_favourite_normal"
            android:gravity="center_vertical"
            android:text="  115264" />


        <TextView
            android:id="@+id/tv_home_details_sharecount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_share_up"
            android:gravity="center_vertical"
            android:text="  115264" />

        <TextView
            android:id="@+id/tv_home_details_commentcount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/message"
            android:gravity="center_vertical"
            android:text="115264" />


    </LinearLayout>


</LinearLayout>